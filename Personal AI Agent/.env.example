# Personal AI Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
# SQLite (for local development)
DATABASE_URL=sqlite:///./personal_ai_agent.db

# PostgreSQL (for production deployment)
# DATABASE_URL=postgresql://username:password@host:port/database_name
# Example: DATABASE_URL=postgresql://myuser:mypassword@localhost:5432/personal_ai_agent

# Security Configuration - IMPORTANT: Change these in production!
SECRET_KEY=your_super_secure_secret_key_here_32_chars_minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration  
HOST=localhost
PORT=8000
DEBUG=true

# Admin User Creation (for create_admin.py script)
# Uncomment and set these to create admin user from environment variables
# ADMIN_USERNAME=youradmin
# ADMIN_PASSWORD=YourSecurePassword123!
# ADMIN_EMAIL=admin@yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB
UPLOAD_DIR=./static/uploads

# LLM Configuration
LLM_MODEL_PATH=./models/mistral-7b-instruct-v0.1.Q4_K_M.gguf
LLM_CONTEXT_WINDOW=8192
LLM_THREADS=4
USE_METAL=true
METAL_N_GPU_LAYERS=1

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Vector Store Configuration
VECTOR_DB_PATH=./data/vector_db

# CORS Configuration (for production, specify exact origins)
# ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
# For Vercel deployment, add your Vercel domain:
# ALLOWED_ORIGINS=https://your-vercel-app.vercel.app,http://localhost:3000

# Logging Configuration
LOG_LEVEL=INFO

# Gmail OAuth Configuration
# IMPORTANT: Get these from Google Cloud Console: https://console.cloud.google.com/
# 1. Create a new project or select existing project
# 2. Enable Gmail API
# 3. Create OAuth 2.0 credentials
# 4. Add redirect URI: http://localhost:8000/api/gmail/callback
GMAIL_CLIENT_ID=your_gmail_client_id_from_google_cloud_console
GMAIL_CLIENT_SECRET=your_gmail_client_secret_from_google_cloud_console
GMAIL_REDIRECT_URI=http://localhost:8000/api/gmail/callback

# Optional Gmail Settings
GMAIL_MAX_EMAILS_PER_SYNC=100
GMAIL_DEFAULT_SYNC_LIMIT=50
