# Staging Environment Configuration
# Personal AI Agent Backend

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
ENVIRONMENT=staging

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/personal_ai_agent_staging

# CORS Configuration
ALLOWED_ORIGINS=https://staging.yourdomain.com,https://staging-api.yourdomain.com

# LLM Configuration
LLM_MODEL_PATH=/app/models/mistral-7b-instruct-v0.1.Q4_K_M.gguf
USE_METAL=false
METAL_N_GPU_LAYERS=0

# Gmail OAuth Configuration (Staging)
GMAIL_CLIENT_ID=your-staging-client-id
GMAIL_CLIENT_SECRET=your-staging-client-secret
GMAIL_REDIRECT_URI=https://staging.yourdomain.com/auth/callback

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/data/uploads

# Logging Configuration
LOG_LEVEL=INFO

# Security Configuration
SECRET_KEY=your-staging-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30